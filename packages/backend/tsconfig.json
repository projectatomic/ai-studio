{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "lib": [
      "ES2017"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": [
      "node",
    ],
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
  },
  "include": [
    "src",
    "types/*.d.ts",
    "../../types/*.d.ts",
    "../shared/*.ts",
    "../shared/**/*.ts"
  ],

}
